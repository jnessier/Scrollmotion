    "jsdom": "^19.0.0",
    "mocha": "^10.0.0",
    "rollup": "^2.75.6",
    "rollup-plugin-browsersync": "^1.3.3",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.8.1",
